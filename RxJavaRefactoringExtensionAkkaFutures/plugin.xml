<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
            point="de.tudarmstadt.stg.rxjava.refactoring.extensionpoint">
        <client
                class="de.tudarmstadt.refactoringrx.ex.akka.Extension">
        </client>
    </extension>

    <extension
            point="org.eclipse.ui.commands">
        <category
                name="Rx Refactoring"
                id="rxRefactoring.commands.rxrefactoring">
        </category>
        <command
                name="AkkaFutures to RxJava"
                categoryId="rxRefactoring.commands.rxrefactoring"
                id="rxRefactoring.commands.rxJavaRefactoringAkkaFutures">
        </command>
    </extension>

    <extension
            point="org.eclipse.ui.handlers">
        <handler
                commandId="rxRefactoring.commands.rxJavaRefactoringAkkaFutures"
                class="de.tudarmstadt.refactoringrx.ex.akka.Handler">
        </handler>
    </extension>

    <extension
            point="org.eclipse.ui.menus">
        <menuContribution
                locationURI="menu:org.eclipse.ui.main.menu?after=additions">
            <menu
                    label="2Rx"
                    mnemonic="R"
                    id="rxRefactoring.menus.rxJavaRefactorings">
                <command
                        commandId="rxRefactoring.commands.rxJavaRefactoringAkkaFutures"
                        mnemonic="1"
                        id="rxRefactoring.menus.rxJavaRefactorings">
                </command>
            </menu>
        </menuContribution>
    </extension>

</plugin>
