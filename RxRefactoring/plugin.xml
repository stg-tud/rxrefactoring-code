<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
            point="org.eclipse.ui.handlers">
        <handler
                commandId="RxRefactoring.commands.refactor"
                class="pluginhandlers.RxRefactoringHandler">
        </handler>
    </extension>
    <extension
            point="org.eclipse.ui.menus">
        <menuContribution
                locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
            <toolbar
                    id="RxRefactoring.toolbars.refactoring">
                <command
                        commandId="RxRefactoring.commands.refactor"
                        icon="icons/rx-refactoring-logo.gif"
                        tooltip="Refactor to RxJava"
                        id="RxRefactoring.toolbars.refactor">
                </command>
            </toolbar>
        </menuContribution>
    </extension>

</plugin>
